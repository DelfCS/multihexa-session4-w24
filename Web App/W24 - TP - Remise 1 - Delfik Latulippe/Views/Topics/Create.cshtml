@model W24___TP___Remise_1___Delfik_Latulippe.Models.Topic
@{
	ViewData["Title"] = "Create";
}

<!-- *** TOPIC - CREATE *** -->

<div class="row d-flex text-center justify-content-center mb-5">
	<div class="pinkText px42Txt">
		Topic
	</div>
	<div class="px32Txt grayText">
		Create
	</div>
</div>

<div class="d-flex justify-content-center text-center">
	<form asp-action="Create" class="row">
		<!-- TOPIC NAME -->
		<div class="grayText">
			Topic Name
			<input asp-for="Name" class="form-control"/>
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<!-- TOPIC DESCRIPTION -->
		<div class="grayText mt-3">
			Topic Description
			<input asp-for="Description" class="form-control myTextArea mt-3"/>
			<span asp-validation-for="Description" class="text-danger"></span>
		</div>
		<!-- SUBMIT -->
		<div class="mt-2">
			<input type="submit" value="Create" class=" w-100 btn btn-lg btn-secondary btnForms mt-3" />
		</div>
	</form>
</div>

<div class="d-flex justify-content-center mt-2">
	<a asp-action="Index">Back to Topics</a>y
</div>



@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	}
