<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - W24___TP___Remise_1___Delfik_Latulippe</title>


	<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
	<!-- Bootstrap core CSS -->
	<link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

	<!-- Additional CSS Files -->
	<link rel="stylesheet" href="~/css/fontawesome.css">
	<link rel="stylesheet" href="~/css/templatemo-cyborg-gaming.css">
	<link rel="stylesheet" href="~/css/owl.css">
	<link rel="stylesheet" href="~/css/animate.css">
	<link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />

	<!-- Login Register -->
	<link rel="stylesheet" href="~/css/loginregister.css">
	
	<!-- Bootstrap core JavaScript -->
	<script defer src="~/vendor/jquery/jquery.min.js"></script>
	<script defer src="~/vendor/bootstrap/js/bootstrap.min.js"></script>

	<script defer src="~/js/isotope.min.js"></script>
	<script defer src="~/js/owl-carousel.js"></script>
	<script defer src="~/js/tabs.js"></script>
	<script defer src="~/js/popup.js"></script>

	<script defer src="~/js/custom.js"></script>

	<!-- My scripts -->
	<script defer src="~/js/site.js"></script>

	<!-- TINY MCE CDN -->
	  <script src="https://cdn.tiny.cloud/1/6fl05yat6vqutjc3lpxnyewwqycj74er1ik41komrf5xlbyw/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
	  <script>
      tinymce.init({
        selector: '.myTextArea',
			toolbar: 'undo redo | blocks | italic underline strikethrough | link image media table mergetags | addcomment showcomments | spellcheckdialog a11ycheck typography | checklist numlist bullist indent outdent | emoticons charmap | removeformat',
			min_height: 200,
			max_height: 450,
			height: 250
      });
    </script>

	@*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@

	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/W24___TP___Remise_1___Delfik_Latulippe.styles.css" asp-append-version="true" />

</head>
<body>

	<!-- ***** Preloader Start ***** -->
	<div id="js-preloader" class="js-preloader">
		<div class="preloader-inner">
			<span class="dot"></span>
			<div class="dots">
				<span></span>
				<span></span>
				<span></span>
			</div>
		</div>
	</div>
	<!-- ***** Preloader End ***** -->


	<div class="container">
		<!-- ***** Header Area Start ***** -->
		<header class="header-area header-sticky">
			<div class="container">
				<div class="row">
					<div class="col-12">
						<nav class="main-nav">
							<!-- ***** Logo Start ***** -->
							<a asp-controller="Topics" asp-action="Index" class="logo">
								<img src="~/assets/images/logo.png" alt="">
							</a>
							<ul class="nav">
								@if(User.IsInRole("Admin"))
								{
								<li>
									<!-- NAV - ADMIN BOARD -->
									<a class="hover-effect" asp-controller="dashboard" asp-action="Index">Dashboard</a>
								</li>
								}
								<partial name="_LoginPartial" />
								<li>
									<!-- NAV - FORUM -->
									<a class="hover-effect" asp-controller="Topics" asp-action="Index">Home</a>
								</li>
							</ul>
							<a class="menu-trigger">
								<span>Menu</span>
							</a>
							<!-- ***** Menu End ***** -->
						</nav>
					</div>
				</div>
			</div>
		</header>
		<!-- ***** Header Area End ***** -->
	</div>

	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="page-content">

					<!-- ***** Banner Start ***** -->
					<div class="main-banner2 main-banner">
						<div class="header-text2 header-text">
							<h6>Welcome To</h6>
							<h4><em>GamesForum</em></h4>
							@*<div class="main-button">
							<a href="browse.html">Browse Now</a>
							</div>*@
						</div>
					</div>

					<!-- ***** Banner End ***** -->
					<div class="container">

						<main role="main" class="pb-3">
							@RenderBody()
						</main>
					</div>

				</div>
			</div>
		</div>
	</div>

	<footer>
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<p>
						Copyright © 2023 <a href="#">GamesForum</a> Company. All rights reserved.

						<br>Design: <a href="#" target="_blank" title="GamesForum">GamesForum</a>  Distributed By <a href="#" target="_blank">GamesForum</a>
					</p>
				</div>
			</div>
		</div>
	</footer>

	@*
	ORIGINAL FOOTER

	<footer class="border-top footer text-muted">
	<div class="container">
	&copy; 2023 - W24___TP___Remise_1___Delfik_Latulippe - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
	</div>
	</footer>*@


	@await RenderSectionAsync("Scripts", required: false)

</body>
</html>
