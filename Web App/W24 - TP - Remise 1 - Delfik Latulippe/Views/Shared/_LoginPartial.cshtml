@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <li>
        <a class="hover-effect" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li>
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Topics")">
            <button type="submit" class="myBtnDark hover-effect">Logout</button>
        </form>
    </li>
}
else
{
    <li>
        <a class="hover-effect" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li>
        <a class="hover-effect" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}

