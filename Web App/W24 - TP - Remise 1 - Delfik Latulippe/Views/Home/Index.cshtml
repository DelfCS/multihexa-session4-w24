@model IEnumerable<W24___TP___Remise_1___Delfik_Latulippe.Models.Topic>
@{
	ViewData["Title"] = "Home Page";
}



<!-- CHANGED FOR TOPICS INDEX -->
<!-- Je rush à commenter tout ça avec mes commentaires déjà là lol -->



<!-- HOME INDEX, MAIN VIEW -->

<div class="row justify-content-around d-flex">
	
	@foreach (var item in Model.Where(i=>i.Active == true)) // Pour chaque catégorie dans la liste ( TOPIC )
	{
		<!-- CARD -->
		<div class="card mx-3 mb-5 myCards" style="width: 18rem;">

			@*<img class="card-img-top" src="~/assets/images/wow1.jpg" alt="Card image cap">*@

			<!-- TOPIC NAME -->
			<div class="card-img-top mt-5 d-flex justify-content-center pinkText2 px32Txt myCardTop text-center">
				@item.Name
				</div>

			<!-- TOPIC DESCRIPTION -->
			<div class="card-body myCardDesc text-center">
				<p class="card-text">@item.Description</p>
			</div>

			<!-- TOPIC INFORMATION -->
			<ul class="list-group list-group-flush">
				<li class="list-group-item d-flex justify-content-center text-center">222 post</li> @*NBR DE POST*@
				<li class="list-group-item d-flex justify-content-center text-center">Last activity : 2016/02/01/18:54</li> @*LAST ACTIVITY*@
			</ul>

			<!-- LINKS -->
			<div class="card-body d-flex justify-content-center row myCardBottom">
				@*<a asp-controller="Topics" asp-action="Details" asp-route-id="@item.TopicId">Details</a>*@
				<!-- SEE TOPIC -->
				<div class="col-12 d-flex justify-content-center mt-2">
					<a class="darkerText px32Txt" asp-controller="Posts" asp-action="Index" asp-route-id="@item.TopicId">Voir le topic</a>
				</div>

				<div class="row">
					<!-- DELETE TOPIC -->
					<div class="col-6 d-flex justify-content-center mt-2">
						<div class="crudBars3">|</div>
							<a class="crudBtns3" asp-controller="Topics" asp-action="Delete" asp-route-id="@item.TopicId">Delete topic</a>
						<div class="crudBars3">|</div>
					</div>

					<!-- EDIT TOPIC -->
					<div class="col-6 d-flex justify-content-center mt-2">
						<div class="crudBars3">|</div>
							<a class="crudBtns3" asp-controller="Topics" asp-action="Edit" asp-route-id="@item.TopicId">Edit topic</a>
						<div class="crudBars3">|</div>
					</div>
				</div>
			</div>
		</div>
	}


</div>

<!-- CREATE TOPIC -->
<div class="row d-flex justify-content-center">
	<div class="col-12 d-flex justify-content-center">
		<div class="crudBars1">|</div>
		<a class="crudBtns1" asp-controller="Topics" asp-action="Create">Create topic</a>
		<div class="crudBars1">|</div>
	</div>
</div>
