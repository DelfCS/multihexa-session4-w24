@model W24___TP___Remise_1___Delfik_Latulippe.Models.Post
@{
    ViewData["Title"] = "Delete";
}

<!----- POST - DELETE ----->

<div class ="d-flex row justify-content-center text-center grayText">
    <div class="col-12 px40Txt pinkText2">
    DELETE
    </div>

    <!-- WARNING TO USER -->
    <div class="col-12 px32Txt mb-2">
        Are you <b class="pinkText2">SURE</b> you want to delete <b><i>@Model.User.UserName</i></b>'s post?
    </div>
    <div class="px20Txt">
        Post title: @Model.Title
    </div>

    <div class="mt-5 col-12">
        <form asp-action="Delete">
            <div class="col-12">
                <!-- DELETE BUTTON -->
                <input type="submit" value="Delete" class="w-auto btn btn-lg btn-secondary btnForms" />
            </div>
            <div class="col-12 mt-4">
                <!-- BACK TO POSTS -->
                <a asp-action="Index" asp-route-topicId="@Model.TopicId">Back to Posts</a>
            </div>
        </form>
    </div>
</div>


