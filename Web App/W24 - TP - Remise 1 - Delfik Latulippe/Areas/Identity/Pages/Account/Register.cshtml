@page
@model RegisterModel
@{
	ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="d-flex">
	<form id="account" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="loginRegister row">
		<hr />
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>

		<!-- EMAIL -->
		<div class="col-12 mb-3 loginRegisterForm form-floating">
			<input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" />
			<label asp-for="Input.Email"></label>
			<span asp-validation-for="Input.Email" class="text-danger"></span>
		</div>

		<!-- USERNAME -->
		<div class="col-12 mb-3 loginRegisterForm form-floating">
			<input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" />
			<label asp-for="Input.UserName"></label>
			<span asp-validation-for="Input.UserName" class="text-danger"></span>
		</div>

		<!-- PASSWORD -->
		<div class="col-12 mb-3 loginRegisterForm form-floating">
			<input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
			<label asp-for="Input.Password"></label>
			<span asp-validation-for="Input.Password" class="text-danger"></span>
		</div>

		<!-- CONFIRM PASSWORD -->
		<div class="col-12 mb-3 loginRegisterForm form-floating">
			<input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
			<label asp-for="Input.ConfirmPassword"></label>
			<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
		</div>

		<div class="col-12 loginRegisterForm">
			<button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-secondary btnForms mt-3">Register</button>
		</div>
	</form>
</div>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
